FROM kerneltime/ubuntu-base

MAINTAINER Ritesh H Shukla <kerneltime@gmail.com>

# Created in base
USER ritesh

RUN git clone https://github.com/rust-lang/rust.git ~/src/rust

RUN set -ex; \
    cd ~/src/rust; \ 
    ./configure; \
    make; \ 
    sudo make install

RUN git clone https://github.com/rust-lang/cargo.git ~/src/cargo

RUN cd ~/src/cargo && \
    	git submodule update --init && \
	python -B src/etc/install-deps.py && \
	./configure && make && sudo make install

#RUN cargo install --git https://github.com/rust-lang-nursery/rustfmt

ENV RUST_SRC_PATH=~/src/rust/src
